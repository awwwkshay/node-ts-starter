{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "A monorepo for Web & API applications built with Node.js and TypeScript",
  "main": "index.js",
  "scripts": {
    "format": "oxfmt .",
    "format:check": "oxfmt . --check",
    
    "lint": "oxlint . --fix --type-aware --type-check",

    "build:apps": "pnpm -r --filter './apps/*' build",
    "build:packages": "pnpm -r --filter './packages/*' build",
    "build:all": "pnpm build:packages && pnpm build:apps",

    "clean:dist": "pnpm rimraf ./apps/**/dist ./packages/**/dist",
    "clean:node_modules": "pnpm rimraf ./apps/**/node_modules ./packages/**/node_modules",
    "clean:all": "pnpm clean:dist && pnpm clean:node_modules",

    "dev": "pnpm --parallel -r --filter './apps/*' dev",
    "dev:k8s": "tilt up"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "oxlint-tsgolint": "^0.8.3",
    "rimraf": "^6.1.2",
    "tsx": "^4.7.1",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=v22.13.0"
  }
}
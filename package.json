{
  "name": "node-ts-starter",
  "version": "1.0.0",
  "description": "A monorepo for Web & API applications built with Node.js and TypeScript",
  "main": "index.js",
  "scripts": {
    "format": "oxfmt .",
    "format:check": "oxfmt . --check",
    "lint": "oxlint . --fix --type-aware --type-check",
    "build": "pnpm -r build",
    "prestart": "pnpm -r build",
    "start": "pnpm --parallel -r start",
    "dev": "pnpm --parallel -r dev"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^22.10.2",
    "oxfmt": "^0.16.0",
    "oxlint": "^1.31.0",
    "oxlint-tsgolint": "^0.8.3",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.13.1",
  "engines": {
    "node": ">=v22.13.0"
  }
}
{
  "name": "@awwwkshay/node-ts-api-starter",
  "version": "0.0.1",
  "description": "API server for Node.js and TypeScript with Hono",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "format": "oxfmt .",
    "format:check": "oxfmt . --check",
    
    "lint": "oxlint . --fix --type-aware --type-check",

    "clean": "rimraf dist",

    "dev": "NODE_ENV=development tsx watch src/index.ts",
    "build": "tsc -p ."
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "hono": "^4.10.7",
    "zod": "^4.1.13",
    "@awwwkshay/node-ts-core": "workspace:*"
  },
  "devDependencies": {
    "dotenv": "^17.2.3"
  }
}
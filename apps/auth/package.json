{
  "name": "auth",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "format": "oxfmt .",
    "format:check": "oxfmt . --check",
    "lint": "oxlint . --fix --type-aware --type-check",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=development tsx watch src/server.ts",
    "build": "tsc -p .",
    "auth:generate": "pnpm dlx @better-auth/cli@latest generate --output src/db/auth-schema.ts --config src/lib/auth.ts",
    "auth:secret": "pnpm dlx @better-auth/cli@latest secret",
    "migrations:generate": "pnpm exec drizzle-kit generate",
    "migrations:up": "pnpm exec drizzle-kit migrate",
    "migrations:down": "pnpm exec drizzle-kit drop"
  },
  "keywords": [],
  "author": "",

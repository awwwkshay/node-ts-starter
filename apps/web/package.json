{
  "name": "@awwwkshay/node-ts-web-starter",
  "version": "0.0.1",
  "description": "Web app for Node.js and TypeScript with Vite",
  "private": true,
  "type": "module",
  "main": "./dist/server/index.mjs",
  "scripts": {
    "format": "oxfmt .",
    "format:check": "oxfmt . --check",
    
    "lint": "oxlint . --fix --type-aware --type-check",

    "clean": "rimraf dist",

    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "start": "NITRO_PORT=3000 NITRO_API_BASE_URL=http://localhost:8000 node ./dist/server/index.mjs"
  },
  "dependencies": {
    "@awwwkshay/node-ts-core": "workspace:*",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "axios": "^1.13.2",
    "lucide-react": "^0.544.0",
    "nitro": "3.0.1-alpha.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "jsdom": "^27.0.0",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0"
  }
}